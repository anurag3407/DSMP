# ===========================================
# NOUNCE - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=5001
FRONTEND_URL=http://localhost:5173

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT Secret Key (change this in production!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Cookie Expiration
COOKIE_EXPIRES=7d

# ===========================================
# PINATA IPFS CONFIGURATION
# ===========================================
# Get your API keys from https://pinata.cloud
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_api_key

# ===========================================
# BLOCKCHAIN CONFIGURATION (SEPOLIA TESTNET)
# ===========================================
# Enable/Disable blockchain features
ENABLE_BLOCKCHAIN=false

# Sepolia RPC URL (get from Infura or Alchemy)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Wallet Private Key (for gas-sponsored transactions)
SEPOLIA_PRIVATE_KEY=your_sepolia_private_key_here

# Deployed Smart Contract Address
CONTRACT_ADDRESS=your_deployed_contract_address_here

# Contract Account Address
CONTRACT_ACCOUNT=0x01c8A19650E2F8D1247dEc586B1ae484b5Fd9D6d

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Max file size in bytes (50MB)
MAX_FILE_SIZE=52428800

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# API Base URL (for frontend)
VITE_API_URL=http://localhost:5001

# Contract Address (for frontend blockchain interaction)
VITE_CONTRACT_ADDRESS=your_deployed_contract_address

# Sepolia Chain ID
VITE_SEPOLIA_CHAIN_ID=11155111

# ===========================================
# NOTES
# ===========================================
# 1. Never commit the actual .env file to version control
# 2. Get Sepolia testnet ETH from: https://sepoliafaucet.com/
# 3. MongoDB Atlas: https://www.mongodb.com/cloud/atlas
# 4. Pinata IPFS: https://pinata.cloud/
# 5. Infura RPC: https://infura.io/
# 6. Keep ENABLE_BLOCKCHAIN=false for gas-free operation (stores only in MongoDB)
