{
  "name": "nounce-backend",
  "version": "1.0.0",
  "description": "Decentralized Social Media Backend - Sepolia + Pinata IPFS + MongoDB",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "hardhat:compile": "npx hardhat compile",
    "hardhat:deploy": "npx hardhat run scripts/deploy.js --network sepolia",
    "hardhat:verify": "npx hardhat run scripts/verify.js --network sepolia",
    "hardhat:test": "npx hardhat test",
    "prebuild": "npm run lint && npm run test",
    "build": "echo 'Backend build complete'",
    "deploy": "npm run hardhat:compile && npm run hardhat:deploy"
  },
  "keywords": [
    "blockchain",
    "web3",
    "decentralized",
    "social-media",
    "ipfs",
    "sepolia",
    "ethereum"
  ],
  "author": "Nounce Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.6.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.3",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "chai": "^4.3.10",
    "eslint": "^8.56.0",
    "hardhat": "^2.19.4",
    "hardhat-gas-reporter": "^1.0.9",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "solidity-coverage": "^0.8.5",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
