{
  "name": "nounce-decentralized-social-media",
  "version": "1.0.0",
  "description": "Fully decentralized social media platform on Sepolia blockchain with Pinata IPFS and MongoDB Atlas",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:backend && npm run build:frontend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run preview",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test": "npm run test:backend && npm run test:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "hardhat:compile": "npx hardhat compile",
    "hardhat:test": "npx hardhat test",
    "hardhat:deploy": "npx hardhat run scripts/deploy.js --network sepolia",
    "hardhat:verify": "npx hardhat run scripts/verify.js --network sepolia",
    "deploy:contract": "npm run hardhat:compile && npm run hardhat:deploy",
    "deploy:vercel": "vercel --prod",
    "prebuild": "npm run lint && npm run test",
    "postinstall": "npm run install:all"
  },
  "keywords": [
    "blockchain",
    "web3",
    "decentralized",
    "social-media",
    "ethereum",
    "sepolia",
    "ipfs",
    "pinata",
    "mongodb",
    "mern",
    "dapp"
  ],
  "author": "Nounce Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/nounce"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.3",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.3",
    "chai": "^4.3.10",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "hardhat": "^2.26.3",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
